Open,\n      userMenu,\n      product,\n      toggleDropdown,\n      closeDropdown,\n      getCategoryName,\n      getConditionName,\n      contactSeller,\n      ref,\n      onMounted,\n      onUnmounted\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","onMounted","onUnmounted","isDropdownOpen","userMenu","product","name","description","category","price","condition","imageUrl","creator","toggleDropdown","value","closeDropdown","event","contains","target","getCategoryName","categories","getConditionName","conditions","contactSeller","alert","document","addEventListener","removeEventListener"],"sources":["C:/Users/jorda/OneDrive/Escritorio/novo-front/src/views/DetallesPage.vue"],"sourcesContent":["<template>\r\n    <div class=\"app\">\r\n  \r\n      <main>\r\n        <section class=\"product-detail\">\r\n          <div class=\"container\">\r\n            <div class=\"product-content\">\r\n              <div class=\"product-image\">\r\n                <img :src=\"product.imageUrl\" :alt=\"product.name\">\r\n              </div>\r\n              <div class=\"product-info\">\r\n                <h1>{{ product.name }}</h1>\r\n                <p class=\"product-price\">${{ product.price.toFixed(2) }}</p>\r\n                <p class=\"product-creator\">Publicado por: {{ product.creator }}</p>\r\n                <p class=\"product-category\">Categoría: {{ getCategoryName(product.category) }}</p>\r\n                <p class=\"product-condition\">Condición: {{ getConditionName(product.condition) }}</p>\r\n                <p class=\"product-description\">{{ product.description }}</p>\r\n                <button @click=\"contactSeller\" class=\"contact-button\">Contactar</button>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </section>\r\n      </main>\r\n  \r\n      <footer>\r\n        <p>&copy; 2024 Studen